{% extends 'base.html.twig' %}

{% block body %}
    <div class="service">
        <div class="container">
            <div class="section-header text-center">
                <div id="google_translate_element"></div>
                <h4 style="margin-top:50px; margin-bottom:50px;">Liste des Reclamations</h4>
                <a href="{{ path('app_reservation_indexFront') }}">Aller à la liste des reservations</a>

            </div>
            <div class="row">
                {% for reclamation in reclamations %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="service-item">
                        <p><strong style="color:#696969">Contenu </strong> {{ reclamation.getContenu() }}</p>
                        <img src="{{ asset('uploads/' ~reclamation.image)}}" style=" width:360px; height:250px; " alt="">                        
                        </div>
                    </div>
                {% else %}
                    <div class="col">
                        <p class="text-center">Aucune Reclamation trouvé.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <br>
{% endblock %}
