{% extends 'dashboard.html.twig' %}

{% block title %}Service Details{% endblock %}

{% block body %}
    <h1>Service Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <td>Id</td>
                <td>Categorie</td>
                <td>Nom</td>
                <td>Image</td>
            </tr>
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.categorieS }}</td>
                <td>{{ service.nom }}</td>
            <td><img src="{{ asset('uploads/' ~service.imageser) }}" style="width:100px; height:100px;" alt=""></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_service_index') }}">Back to List</a>
    <a href="{{ path('app_service_edit', {'id': service.id}) }}">Edit</a>
    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
